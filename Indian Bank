        rs=pg.text.split("function initMap()")[1]
        a=rs.split('{')[1].split('}')[0].strip()
        c=[]
        if a=='':
            pass
        else:
            b=a.split('addMarker')
            c=c+b
        for j in c:
            if j=='':
                pass
            else:
                d=eval(j)
                e=d[1].split('##')
                ad=eval(str(e[2:-10]))
                add="\t".join(ad).strip()
                br=e[1]
                ifsc=e[-10]
                ph=e[-6]
                mna=e[-5]
                pi=e[8]
                print(br,i)
                excel.write(repr(br)+"\t"+repr(i)+"\t"+repr(add)+"\t"+repr(ifsc)+"\t"+repr(ph)+"\t"+repr(mna)+"\t"+repr(pi)+"\n")
    
    except:continue
